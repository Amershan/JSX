#!/usr/bin/env node

var fs = require("fs");
var child_process = require("child_process");

var Class = require("../src/Class");
eval(Class.$import("../src/compiler"));
eval(Class.$import("../src/platform"));
eval(Class.$import("../src/jsemitter"));

"use strict";

var NodePlatform = Platform.extend({

	getRoot: function () {
		return __dirname.replace(/\/bin\/?$/, "");
	},

	load: function(path) {
		return fs.readFileSync(path).toString();
	},

	save: function (outputFile, content) {
		if (outputFile == null) {
			process.stdout.write(content);
		}
		else {
			fs.writeFileSync(outputFile, content);
		}
	},

	// called from JavaScriptEmitter
	addLauncher: function (emitter, targetCode, entryPoint) {
		if(emitter instanceof JavaScriptEmitter) {
			switch(entryPoint) {
			case "_Main":
				return targetCode +
					"_Main.main$AS(process.argv.slice(2));\n";
			case "_Test":
				return targetCode +
					"if (typeof(_Test) !== 'undefined')\n"+
					"  (function (t) {\n"+
					"    for (var m in t) {\n"+
					"      if (/^test.*[$]/.test(m)) {\n"+
					"        t[m]();\n"+
					"       }\n"+
					"    }\n"+
					"  }(new _Test));\n";
			default:
				throw new Error("Unknown entry point type: " +
								entryPoint);
			}
		}
		else {
			throw new Error("FIXME");
		}
	}
});

var JSX = Class.extend({
	$_meta: null,

	$meta: function (name) {
		if (JSX._meta === null) {
			var j = fs.readFileSync( __dirname + "/../package.json" );
			JSX._meta = JSON.parse(j);
		}
		return JSX._meta[name];
	},

	$execNodeJS: function (script) {
		var child = child_process.spawn(process.execPath, []);

		child.stdin.write(script);
		child.stdin.end();

		child.stdout.on("data", function (data) {
			process.stdout.write(data);
		});
		child.stderr.on("data", function (data) {
			process.stderr.write(data);
		});
		child.on("exit", function (status) {
			process.exit(status);
		});
	},

	$printHelp: function () {
		console.log(
			"JSX compiler version " + JSX.meta("version") + "\n" +
			"\n" +
			"Usage: jsx [options] source-files\n" +
			"\n" +
			"Options:\n" +
			"  --run Class                runs Class.main(:string[]):void after compiling\n" +
			"  --test                     runs _Test.run():void after compiling\n" +
			"  --output file              output file (default:stdout)\n" +
			"  --mode (compile|parse)     compilation mode (default:compile)\n" +
			"  --target (javascript|c++)  target language (default:javascript)\n" +
			"  --version                  displays the version and exits\n" +
			"  --help                     displays this help and exits\n" +
			"");
	},

	$main: function (args) {

		var platform = new NodePlatform();

		var argIndex = 0;
		var getopt = function () {
			if (args.length <= argIndex)
				return null;
			var arg = args[argIndex++];
			if (arg.match(/^-/))
				return arg;
			else if (arg == "--")
				return null;
			else {
				--argIndex;
				return null;
			}
		};
		var getoptarg = function () {
			if (args.length <= argIndex) {
				console.error("option " + args[argIndex - 1] + " requires a value");
				return null;
			}
			return args[argIndex++];
		};

		var compiler = new Compiler(platform);

		var emitter = null;
		var outputFile = null;
		var run = null;
		var opt, optarg;
		while ((opt = getopt()) != null) {
			switch (opt) {
			case "--output":
				if((outputFile = getoptarg()) == null)
					process.exit(1);
				break;
			case "--mode":
				if ((optarg = getoptarg()) == null)
					process.exit(1);
				switch (optarg) {
				case "compile":
					compiler.setMode(Compiler.MODE_COMPILE);
					break;
				case "parse":
					compiler.setMode(Compiler.MODE_PARSE);
					break;
				default:
					console.error("unknown mode: " + optarg);
					process.exit(1);
					break;
				}
				break;
			case "--target":
				if ((optarg = getoptarg()) == null)
					process.exit(1);
				switch (optarg) {
				case "javascript":
					emitter = new JavaScriptEmitter(platform);
					break;
				case "c++":
					throw new Error("FIXME");
					break;
				default:
					console.log("unknown target: " + optarg);
					process.exit(1);
				}
				break;
			case "--test":
				run = "_Test";
				break;
			case "--run":
				run = "_Main";
				break;
			case "--version":
				console.log(JSX.meta("version"));
				process.exit(0);
				break;
			case "--help":
				JSX.printHelp();
				process.exit(0);
				break;
			default:
				console.error("unknown option: " + opt);
				process.exit(1);
				break;
			}
		}

		if (argIndex == args.length) {
			console.error("no files");
			process.exit(1);
		}

		for (; argIndex < args.length; ++argIndex)
			compiler.addSourceFile(null, args[argIndex]);

		if(compiler.getMode() === Compiler.MODE_PARSE) {
			if (compiler.compile()) {
				platform.save(outputFile, compiler.getAST());
				process.exit(0);
			}
			else
				process.exit(1);
		}

		// MODE_COMPILE
		if (emitter == null)
			emitter = new JavaScriptEmitter(platform);

		if (outputFile != null) {
			emitter.setOutputFile(outputFile);
		}

		compiler.setEmitter(emitter);

		if (! compiler.compile())
			process.exit(1);

		var output = emitter.getOutput(run);

		if (run == null) { // compile
			platform.save(outputFile, emitter.getOutput(run));

			if (emitter instanceof JavaScriptEmitter) {
				emitter.saveSourceMappingFile(platform);
			}
		}
		else { // compile and run
			if(emitter instanceof JavaScriptEmitter) {
				JSX.execNodeJS(output);
			}
			else {
				throw new Error("FIXME: run C+++ code");
			}
		}
	}

});

JSX.main(process.argv.slice(2));

// vim: set ft=javascript:
// vim: set noexpandtab:
